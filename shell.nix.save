{ pkgs ? import <nixpkgs> {} }:

pkgs.mkShell rec {
  buildInputs = [
    pkgs.python310Full          # Utiliza Python 3.10
    pkgs.python310Packages.pip  # Instala pip para gestionar las librer√≠as
  ];

  shellHook = ''
    export PYTHONPATH=$PYTHONPATH:${toString pkgs.python310.sitePackages}
  '';
}


